{
  "exclude": [
    "./tests",
    "./node_modules",
    "./dist"
  ],
  "compilerOptions": {
    "moduleResolution": "node16",
    "target": "ESNext",                                 
    "module": "NodeNext",                                
    "rootDir": "./src",
    "declaration": true,                             
    "outDir": "./dist",
    "noImplicitAny": true,                           
    "strictNullChecks": true,                        
    "noImplicitReturns": true                       
  },
  "include": ["src/**/*.ts"]
}